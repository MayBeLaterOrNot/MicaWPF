<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<Copyright>Copyright (c) 2021 Simnico99</Copyright>
		<RepositoryUrl>https://github.com/Simnico99/MicaWPF</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>WPF;Mica;WinUI;</PackageTags>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Company></Company>
		<PackageProjectUrl>https://github.com/Simnico99/MicaWPF</PackageProjectUrl>
		<NeutralLanguage>en</NeutralLanguage>
		<LangVersion>10</LangVersion>
		<PackageLicenseFile></PackageLicenseFile>
	</PropertyGroup>

	<PropertyGroup>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>ReadmeNuget.md</PackageReadmeFile>
		<Version>1.1.8</Version>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageIcon>Logo128x128.png</PackageIcon>
		<Authors>Simnico99</Authors>
		<Description>A WPF Library that implement an easy way to use Mica material without WinUI.</Description>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="ReadmeNuget.md" />
	</ItemGroup>

	<ItemGroup>
	  <None Include="..\Logo\Logo128x128.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="System.Management" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="ReadmeNuget.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </Resource>
	</ItemGroup>

</Project>

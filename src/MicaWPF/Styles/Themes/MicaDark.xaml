    <Color x:Key="MicaWPF.Colors.CardBackgroundFillColorDefault">#0DFFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.CardBackgroundFillColorSecondary">#08FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.SmokeFillColorDefault">#4D000000</Color>

    <Color x:Key="MicaWPF.Colors.LayerFillColorDefault">#4C3A3A3A</Color>
    <Color x:Key="MicaWPF.Colors.LayerFillColorAlt">#0DFFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.LayerOnAcrylicFillColorDefault">#09FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.LayerOnAccentAcrylicFillColorDefault">#09FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.SolidBackgroundFillColorBase">#202020</Color>
    <Color x:Key="MicaWPF.Colors.SolidBackgroundFillColorSecondary">#1C1C1C</Color>
    <Color x:Key="MicaWPF.Colors.SolidBackgroundFillColorTertiary">#282828</Color>
    <Color x:Key="MicaWPF.Colors.SolidBackgroundFillColorQuarternary">#2C2C2C</Color>
    <Color x:Key="MicaWPF.Colors.SolidBackgroundFillColorTransparent">#00202020</Color>

    <Color x:Key="MicaWPF.Colors.SystemFillColorSuccess">#6CCB5F</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorCaution">#FCE100</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorCritical">#FF99A4</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorNeutral">#8BFFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorSolidNeutral">#9D9D9D</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorAttentionBackground">#08FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorSuccessBackground">#393D1B</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorCautionBackground">#433519</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorCriticalBackground">#442726</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorNeutralBackground">#08FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorSolidAttentionBackground">#2E2E2E</Color>
    <Color x:Key="MicaWPF.Colors.SystemFillColorSolidNeutralBackground">#2E2E2E</Color>

    <!--  Elevation border brushes  -->

    <LinearGradientBrush x:Key="MicaWPF.GradientBrushes.ControlElevationBorder" MappingMode="Absolute" StartPoint="0,0" EndPoint="0,3">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.33" Color="{StaticResource MicaWPF.Colors.ControlStrokeColorSecondary}" />
            <GradientStop Offset="1.0" Color="{StaticResource MicaWPF.Colors.ControlStrokeColorDefault}" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MicaWPF.GradientBrushes.CircleElevationBorder" MappingMode="RelativeToBoundingBox" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.70" Color="{StaticResource MicaWPF.Colors.ControlStrokeColorSecondary}" />
            <GradientStop Offset="0.50" Color="{StaticResource MicaWPF.Colors.ControlStrokeColorDefault}" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MicaWPF.GradientBrushes.AccentControlElevationBorder" MappingMode="Absolute" StartPoint="0,0" EndPoint="0,3">
        <LinearGradientBrush.RelativeTransform>
            <ScaleTransform CenterY="0.5" ScaleY="-1" />
        </LinearGradientBrush.RelativeTransform>
        <LinearGradientBrush.GradientStops>
            <GradientStop Offset="0.33" Color="{StaticResource MicaWPF.Colors.ControlStrokeColorOnAccentSecondary}" />
            <GradientStop Offset="1.0" Color="{StaticResource MicaWPF.Colors.ControlStrokeColorOnAccentDefault}" />
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <Storyboard x:Key="MicaWPF.Animations.Button.Default.MouseOver">
        <local1:BrushAnimation
            Storyboard.TargetName="ContentBorder"
            Storyboard.TargetProperty="Background"
            From="{StaticResource MicaWPF.Brushes.ControlFillColorDefault}"
            To="{StaticResource MicaWPF.Brushes.ControlFillColorSecondary}"
            Duration="0:0:0.083" />
    </Storyboard>

    <Storyboard x:Key="MicaWPF.Animations.Button.Default.Pressed">
        <local1:BrushAnimation
            Storyboard.TargetName="ContentBorder"
            Storyboard.TargetProperty="Background"
            From="{StaticResource MicaWPF.Brushes.ControlFillColorSecondary}"
            To="{StaticResource MicaWPF.Brushes.ControlFillColorTertiary}"
            Duration="0:0:0.083" />
        <local1:BrushAnimation
            Storyboard.TargetName="ContentPresenter"
            Storyboard.TargetProperty="(TextElement.Foreground)"
            From="{StaticResource MicaWPF.Brushes.TextFillColorPrimary}"
            To="{StaticResource MicaWPF.Brushes.TextFillColorSecondary}"
            Duration="0:0:0.083" />
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentBorder" Storyboard.TargetProperty="BorderBrush">
            <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource MicaWPF.Brushes.ControlStrokeColorDefault}" />
        </ObjectAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="MicaWPF.Animations.Button.Accent.MouseOver">
        <local1:BrushAnimation
            Storyboard.TargetName="ContentBorder"
            Storyboard.TargetProperty="Background"
            From="{StaticResource MicaWPF.Brushes.AccentFillColorDefault}"
            To="{StaticResource MicaWPF.Brushes.AccentFillColorSecondary}"
            Duration="0:0:0.083" />
    </Storyboard>

    <Storyboard x:Key="MicaWPF.Animations.Button.Accent.Default.Pressed">
        <local1:BrushAnimation
            Storyboard.TargetName="ContentPresenter"
            Storyboard.TargetProperty="(TextElement.Foreground)"
            From="{StaticResource MicaWPF.Brushes.TextOnAccentFillColorPrimary}"
            To="{StaticResource MicaWPF.Brushes.TextOnAccentFillColorSecondary}"
            Duration="0:0:0.083" />
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentBorder" Storyboard.TargetProperty="Background">
            <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource MicaWPF.Brushes.AccentFillColorTertiary}" />
        </ObjectAnimationUsingKeyFrames>
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentBorder" Storyboard.TargetProperty="BorderBrush">
            <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource MicaWPF.Brushes.ControlFillColorTransparent}" />
        </ObjectAnimationUsingKeyFrames>
    </Storyboard>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MicaWPF;component/Styles/Assets/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>

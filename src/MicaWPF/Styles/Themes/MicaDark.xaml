    <Color x:Key="MicaWPF.Colors.TextOnAccentFillColorPrimary">#000000</Color>
    <Color x:Key="MicaWPF.Colors.TextOnAccentFillColorSecondary">#80000000</Color>
    <Color x:Key="MicaWPF.Colors.TextOnAccentFillColorDisabled">#87FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.ControlFillColorDefault">#0FFFFFFF</Color>

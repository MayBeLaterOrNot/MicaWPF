    <Color x:Key="MicaWPF.Colors.ControlSolidFillColorDefault">#454545</Color>

    <Color x:Key="MicaWPF.Colors.SubtleFillColorTransparent">#00FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.SubtleFillColorSecondary">#0FFFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.SubtleFillColorTertiary">#0AFFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.SubtleFillColorDisabled">#00FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.ControlAltFillColorTransparent">#00FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.ControlAltFillColorSecondary">#19000000</Color>
    <Color x:Key="MicaWPF.Colors.ControlAltFillColorTertiary">#0BFFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.ControlAltFillColorQuarternary">#12FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.ControlAltFillColorDisabled">#00FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.ControlOnImageFillColorDefault">#B31C1C1C</Color>
    <Color x:Key="MicaWPF.Colors.ControlOnImageFillColorSecondary">#1A1A1A</Color>
    <Color x:Key="MicaWPF.Colors.ControlOnImageFillColorTertiary">#131313</Color>
    <Color x:Key="MicaWPF.Colors.ControlOnImageFillColorDisabled">#1E1E1E</Color>

    <Color x:Key="MicaWPF.Colors.AccentFillColorDisabled">#28FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.ControlStrokeColorDefault">#12FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.ControlStrokeColorSecondary">#18FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.ControlStrokeColorOnAccentDefault">#14FFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.ControlStrokeColorOnAccentSecondary">#23000000</Color>
    <Color x:Key="MicaWPF.Colors.ControlStrokeColorOnAccentTertiary">#37000000</Color>
    <Color x:Key="MicaWPF.Colors.ControlStrokeColorOnAccentDisabled">#33000000</Color>

    <Color x:Key="MicaWPF.Colors.ControlStrokeColorForStrongFillWhenOnImage">#6B000000</Color>

    <Color x:Key="MicaWPF.Colors.CardStrokeColorDefault">#19000000</Color>
    <Color x:Key="MicaWPF.Colors.CardStrokeColorDefaultSolid">#1C1C1C</Color>

    <Color x:Key="MicaWPF.Colors.MenuBorderColorDefault">#151515</Color>

    <Color x:Key="MicaWPF.Colors.ControlStrongStrokeColorDefault">#8BFFFFFF</Color>
    <Color x:Key="MicaWPF.Colors.ControlStrongStrokeColorDisabled">#28FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.SurfaceStrokeColorDefault">#66757575</Color>
    <Color x:Key="MicaWPF.Colors.SurfaceStrokeColorFlyout">#33000000</Color>
    <Color x:Key="MicaWPF.Colors.SurfaceStrokeColorInverse">#0F000000</Color>

    <Color x:Key="MicaWPF.Colors.DividerStrokeColorDefault">#15FFFFFF</Color>

    <Color x:Key="MicaWPF.Colors.FocusStrokeColorOuter">#FFFFFF</Color>
